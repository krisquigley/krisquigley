---
pageable: true
per_page: 10
---
<div class="col-xs-12 col-sm-9 col-sm-pull-3 blog__article">
    <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% page_articles.each_with_index do |article, i| %>
    <span class="blog__index__date">
      <%= article.date.strftime('%b %e, %Y') %>
    </span>
    <h3 class="blog__index__heading">
      <%= link_to article.title, article %> 
    </h3>
    <p class="blog__index__intro"><%= article.data.intro %></p>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>


